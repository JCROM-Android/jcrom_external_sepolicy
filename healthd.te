# healthd seclabel is specified in init.rc since
# it lives in the rootfs and has no unique file type.
type healthd, domain;
permissive healthd;
type healthd_exec, exec_type, file_type;

init_daemon_domain(healthd)
unconfined_domain(healthd)
allow healthd rootfs:file entrypoint;
write_klog(healthd)

# workaround for a mismatch in the capability mapping
# see https://bugzilla.redhat.com/show_bug.cgi?id=895070
allow healthd self:capability2 wake_alarm;
